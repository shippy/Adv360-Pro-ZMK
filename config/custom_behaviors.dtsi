hm: homerow_mods {
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    require-prior-idle-ms = <125>;
    tapping-term-ms = <200>;
    flavor = "tap-preferred";
    bindings = <&kp>, <&kp>;
};

// For QMK-like "Space Cadet" behavior (Shift on hold, parens on tap)
sc: space_cadet {
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    tapping-term-ms = <200>;
    require-prior-idle-ms = <200>;
    flavor = "hold-preferred";
    bindings = <&kp>, <&kp>;
};

// For long-press behavior (e.g. Ctrl-Z on long press of Z, or lock-screen on long press of Macro 4)
lp: long_press_mod {
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    tapping-term-ms = <300>;  // increased to 500ms to avoid accidental activation
    flavor = "tap-preferred";
    bindings = <&kp>, <&kp>;
};
